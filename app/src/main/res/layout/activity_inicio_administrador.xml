<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".inicioAdministrador">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inicio de Sesion Como Administrador"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/adminLoginAdministrador"
        android:hint="Usuario"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"/>

    <EditText
        android:id="@+id/contraseñaLoginAdministrador"
        android:hint="Contraseña"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"/>

    <Button
        android:id="@+id/logearseAdministrador"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Iniciar Sesion"
        android:textColorHint="#fff"
        android:textStyle="bold"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:textSize="20dp"/>

</LinearLayout>